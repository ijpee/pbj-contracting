---
import "../styles/global.css";
import Navbar from '../components/navbar/Navbar.astro';
import Footer from '../components/footer/footer.astro';
import { ClientRouter } from 'astro:transitions';
import '@fontsource/inter';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

const { 
  title = "PB+J Contracting Ltd | Water Management Specialists",
  description = "PB+J Contracting specializes in water management, irrigation design, pump stations, and electrical automation for New Zealand orchards and industries."
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
		<title>{title}</title>
    <ClientRouter />
	</head>
	<body class="font-[Inter,sans-serif]">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
