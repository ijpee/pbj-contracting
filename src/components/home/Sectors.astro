---
import { Image } from "astro:assets";
import { sectors } from "../../Data/sectors";
import imgGolf from "../../assets/img/Aerial Golf Course.jpg";
import imgHorticulture from "../../assets/img/Aerial Hillside Orchard.JPG";
import imgNursery from "../../assets/img/nursery irrigation.webp";
import imgTunnel from "../../assets/img/Aerial Tunnel House - Horiculture.jpg";

const imageMap = {
  golf: imgGolf,
  horticulture: imgHorticulture,
  nursery: imgNursery,
  tunnel: imgTunnel
};

---

<section class="relative z-10 py-20 bg-[#f0f9ff]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-[#0B2545] mb-4">
        Water Solutions for Every Sector
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        From golf courses to orchards, we deliver precision water management nationwide.
      </p>
    </div>

    <!-- Displaying first 3 sectors or all of them -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {sectors.map((sector) => (
        <a href="/sectors" class="group relative block h-[400px] overflow-hidden rounded-xl shadow-lg">
          <Image 
            src={imageMap[sector.imageKey] || imgTunnel} 
            alt={sector.title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-[#0B2545]/90 via-[#0B2545]/40 to-transparent"></div>
          <div class="absolute bottom-0 left-0 p-6 w-full">
            <h3 class="text-xl font-bold text-white mb-2">{sector.title}</h3>
            <div class="grid grid-rows-[0fr] group-hover:grid-rows-[1fr] transition-[grid-template-rows] duration-500">
              <div class="overflow-hidden">
                <p class="text-gray-200 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                   {sector.description}
                </p>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
