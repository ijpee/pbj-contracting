---
import logo from "../../assets/PBNJ Logo No Background.png";
import { Image } from "astro:assets";
---

<footer class="relative z-10 bg-[#0B2545] text-white py-10">
  <div class="max-w-6xl mx-auto flex flex-col items-center gap-10 text-center">
    <!-- Sections -->
    <div
      class="flex flex-col md:flex-row md:justify-center md:gap-20 gap-10 w-full"
    >
      <!-- Brand / Logo -->
      <div class="flex flex-col items-center md:items-start">
         <a href="/" class="flex items-center">
          <Image 
            src={logo} 
            alt="PB+J Contracting" 
            class="h-24 w-auto brightness-0 invert opacity-90 hover:opacity-100 transition-opacity" 
          />
        </a>
      </div>

      <!-- Services -->
      <div>
        <h6 class="footer-title text-white mb-3 uppercase font-bold">
          Services
        </h6>
        <a href="/services#irrigation" class="link link-hover text-white block">Precision Irrigation</a>
        <a href="/services#pump" class="link link-hover text-white block">Pump Stations</a>
        <a href="/services#fertigation" class="link link-hover text-white block">Fertigation & Dosing</a>
        <a href="/services#electrical" class="link link-hover text-white block">Electrical & Automation</a>
      </div>

      <!-- Company -->
      <div>
        <h6 class="footer-title text-white mb-3 uppercase font-bold">
          Company
        </h6>
        <a href="/about" class="link link-hover text-white block">About Us</a>
        <a href="/contact" class="link link-hover text-white block">Contact</a>
      </div>

      <!-- Social -->
      <div>
        <h6 class="footer-title text-white mb-3 uppercase font-bold">Social</h6>
        <div class="flex gap-4 justify-center cursor-pointer">
          <!-- Twitter -->
          <a class="text-white hover:text-gray-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-current"
            >
              <path
                d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
              ></path>
            </svg>
          </a>
          <!-- YouTube -->
          <a class="text-white hover:text-gray-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-current"
            >
              <path
                d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"
              ></path>
            </svg>
          </a>
          <!-- Facebook -->
          <a class="text-white hover:text-gray-300">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              class="fill-current"
            >
              <path
                d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="text-white text-sm mt-10 border-t border-white/20 pt-6 w-full text-center">
      &copy; {new Date().getFullYear()} PB+J Contracting Ltd. All rights reserved.
    </div>
  </div>
</footer>
