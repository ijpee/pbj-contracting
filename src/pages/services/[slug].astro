---
import Layout from "../../layouts/Layout.astro";
import { features } from "../../Data/features.js";
import { Image } from 'astro:assets';

// Import images for the services map
import imgIrrigation from "../../assets/img/Aerial Orchard.JPG";
import imgPump from "../../assets/img/Industrial Filtration Pump Hub.jpg";
import imgFertigation from "../../assets/img/Outdoor Mixing Station.jpg";
import imgElectrical from "../../assets/img/Pump Room 2.jpg";

export async function getStaticPaths() {
  return features.map((feature) => {
    return {
      params: { slug: feature.slug },
      props: { feature },
    };
  });
}

const { feature } = Astro.props;

const imageMap = {
  irrigation: imgIrrigation,
  pump: imgPump,
  fertigation: imgFertigation,
  electrical: imgElectrical,
};

const title = `${feature.title} | PB&J Services`;
---

<Layout title={title}>
  <!-- Hero Section (Full Width, Big Image) -->
  <div class="relative w-full h-[60vh] min-h-[500px]">
    <Image
      src={imageMap[feature.imageKey]}
      alt={feature.title}
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-center px-4">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 drop-shadow-md">
        {feature.title}
      </h1>
      <a href="/services" class="text-white underline hover:no-underline mt-4 text-lg">
        &larr; Back to Services
      </a>
    </div>
  </div>

  <!-- Content Section -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-6">
      
      <!-- Longer Description -->
      <div class="mb-12">
        <h2 class="text-3xl font-bold text-[#0B2545] mb-6 border-l-4 border-accent pl-4">
            Overview
        </h2>
        <p class="text-xl text-gray-700 leading-relaxed">
          {feature.longDescription}
        </p>
      </div>

      <!-- Key Capabilities / Details -->
      <div class="bg-blue-50 p-8 rounded-xl shadow-sm border border-blue-100">
        <h3 class="text-2xl font-bold text-[#0B2545] mb-6">
            Key Capabilities
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {feature.details && feature.details.map((item) => (
              <div class="flex items-start">
                 <div class="flex-shrink-0 h-6 w-6 rounded-full bg-accent flex items-center justify-center text-[#0B2545] mt-0.5">
                    <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                    </svg>
                 </div>
                 <span class="ml-3 text-lg text-gray-700 font-medium">{item}</span>
              </div>
            ))}
        </div>
      </div>
     
      <!-- "Ready to start?" Block -->
      <div class="mt-16 text-center">
         <p class="text-gray-600 mb-6">Need more information about {feature.title}?</p>
         <a href="/contact" class="inline-block bg-[#0B2545] hover:bg-[#1D3A75] text-white font-bold py-3 px-8 rounded-lg transition-colors shadow-lg">
            Discuss Your Project
         </a>
      </div>

    </div>
  </section>

</Layout>
